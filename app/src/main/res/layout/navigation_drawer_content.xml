<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:minHeight="?android:attr/listPreferredItemHeightSmall"
    android:padding="10dp"
    >

    <ImageView
        android:layout_height="@dimen/navigation_drawer_icon_height"
        android:layout_width="@dimen/navigation_drawer_icon_width"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/navigation_drawer_item_image"
    />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="4dp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/navigation_drawer_item_image"
        android:layout_toRightOf="@+id/navigation_drawer_item_image"
        android:textColor="@android:color/black"
        android:gravity="center_vertical"
        android:id="@+id/navigation_drawer_item_text"
    />
</RelativeLayout>